FROM python:3.11-slim

WORKDIR /app
COPY ./api /app

# Install FastAPI + Uvicorn
RUN pip install --no-cache-dir fastapi uvicorn

# Expose port internally for other services
EXPOSE 8000

# Run the API after the CLI becomes available
CMD ["bash", "-c", "until [ -x /ichiran-bin/ichiran-cli ] && [ -f /ichiran-bin/ichiran-cli.core ]; do echo 'Waiting for ichiran-cli...'; sleep 2; done; exec uvicorn main:app --host 0.0.0.0 --port 8000"]
